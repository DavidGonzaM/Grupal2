                  <Label text="Nombre de Usuario" />
                  <TextField fx:id="txtNombreUsuario" maxHeight="0.0" maxWidth="200.0" />
               </children>
            </FlowPane>
            <FlowPane hgap="75.0">
               <children>
                  <Label text="Contraseña" />
                  <TextField fx:id="txtContraseña" />
               </children>
            </FlowPane>
            <FlowPane alignment="CENTER" hgap="40.0">
               <children>
                  <CheckBox fx:id="alumno" mnemonicParsing="false" onAction="#alumno" text="Alumno" />
                  <CheckBox fx:id="profesor" mnemonicParsing="false" onAction="#profesor" text="Profesor" />
               </children>
            </FlowPane>
            <Button fx:id="btnSesion" onAction="#switchToSecondary" text="Iniciar Sesion" />
